<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:orientation="vertical"
        android:padding="5dp"
        tools:context=".activities.adminpanelLOG">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailLOGAD"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="20dp"
            android:hint="Email Address"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="text"
            android:layout_below="@id/textView3"
            android:paddingLeft="20dp"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/round_back_dark_blue5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="60dp"
            android:id="@+id/passPage"
            android:layout_below="@id/emailLOGAD"
            android:background="@drawable/round_back_dark_blue5">

            <EditText
                android:id="@+id/passwordLOGAD"
                android:layout_toStartOf="@+id/passwordIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_back_dark_blue5"
                android:hint="Password"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <ImageView
                android:id="@+id/passwordIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/show_password"
                android:adjustViewBounds="true"
                android:layout_marginEnd="20dp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passPage"
            android:layout_marginTop="25dp"

            android:textAlignment="viewEnd"
            android:textColor="#fff"

            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginAdmin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/actionbtn"
            android:padding="5dp"
            android:text="LOGIN"
            android:layout_below="@id/forgotPassword"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />






        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:elevation="10dp"
            android:visibility="gone" />

    </RelativeLayout>